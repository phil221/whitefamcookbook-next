generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("POSTGRES_PRISMA_URL")
  directUrl = env("POSTGRES_URL_NON_POOLING")
}

model Recipe {
  id             Int      @id @default(autoincrement())
  name           String   @db.VarChar(80)
  authorName     String   @db.VarChar(100)
  categoryName   String   @db.VarChar(100)
  servingsNumber String   @db.VarChar(30)
  prepTime       Int
  ingredients    String   @db.VarChar(500)
  instructions   String   @db.VarChar(500)
  comment        String?  @db.VarChar(500)
  nutritionFacts String   @db.VarChar(500)
  createdAt      DateTime @default(now())
  category       Category @relation(fields: [categoryName], references: [name])
  author         Author   @relation(fields: [authorName], references: [name])
}

model Author {
  id         Int        @id @default(autoincrement())
  name       String     @unique @db.VarChar(100)
  recipes    Recipe[]
  categories Category[]
}

model Category {
  id      Int      @id @default(autoincrement())
  name    String   @unique @db.VarChar(100)
  recipes Recipe[]
  authors Author[]
}
